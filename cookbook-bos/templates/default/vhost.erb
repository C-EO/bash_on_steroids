<VirtualHost *:80>
	ServerName  <%= @params[:server_name] %>
	ServerAdmin webmaster@example.org
	DocumentRoot /var/www/html/
 
        ScriptAlias "/index.html" "/usr/lib/cgi-bin/index.cgi"
        ScriptAlias "/index" "/usr/lib/cgi-bin/index.cgi"
        RedirectMatch 404 .*\.htsh
        <Directory /var/www/html/>
          AllowOverride none
          Options -Indexes
          Require all granted
        </Directory>
	ErrorLog /var/log/apache2/<%= @params[:server_name] %>-error.log
	CustomLog /var/log/apache2/<%= @params[:server_name] %>-access.log combined
	Include conf-available/serve-cgi-bin.conf
</VirtualHost>
